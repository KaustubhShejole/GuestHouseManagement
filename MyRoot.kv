#: import WipeTransition kivy.uix.screenmanager.WipeTransition
Manager:
    transition:WipeTransition()
    FirstWindow:
    SecondWindow:
    ThirdWindow:
<FirstWindow>:
    name:"one"
    elevation: 10
    GridLayout:
        cols:1
        rows:2

        GridLayout:
            cols:2
            rows:2
            padding:50,50
            spacing:25,35
            Label:
                text:"UserName"
                color:"green"
                font_size:25
            TextInput:
                text: ""
                font_size:40
                multiline:False
                id:user_name
                hint_text: "Username"
                foreground_color: 1, 0, 1, 1

            Label:
                text:"Password"
                color:"yellow"
                font_size:25
            TextInput:
                text: ""
                font_size:40
                multiline:False
                id:password
                hint_text: "Password"
                foreground_color: 1, 0, 1, 1
                password:True
        GridLayout:
            cols:2
            padding:100,100
            Button:
                text:"Login"
                color:"red"
                background_color:(230,230,0,1)
                id:login_button
                on_press:root.manager.current = "two"
            Button:
                text:"SignUp"
                color:"red"
                background_color:(230,0,230,1)
                id:signup_button
                on_press:root.manager.current = "three"
<SecondWindow>:
    name:"two"
<ThirdWindow>:
    name:"three"